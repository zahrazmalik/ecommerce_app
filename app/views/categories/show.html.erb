<h1><%= @category.name.titleize %></h1>

<% if @products.any? %>
  <ul>
    <% @products.each do |product| %>
      <li>
        <%= link_to product.name.titleize, category_product_path(@category.name, product.name) %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No products found in this category.</p>
<% end %>


<%= link_to "Back to Categories", categories_path%>