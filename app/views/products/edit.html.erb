<h1>Edit Product</h1>

<%= form_with(model: [@category, @product], local: true) do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :price %><br>
    <%= f.number_field :price, step: 0.01 %>
  </p>
  <%= f.submit "Update Product" %>
<% end %>

<%= link_to "Back to Product", category_product_path(@category.name, @product.name) %>
